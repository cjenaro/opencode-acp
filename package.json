{
  "name": "opencode-acp",
  "version": "0.1.0",
  "description": "ACP adapter for opencode - enables ACP-compatible editors to use opencode as their coding agent",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "opencode-acp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "start": "node dist/index.js",
    "dev": "bun run build && bun run start",
    "lint": "biome check src",
    "lint:fix": "biome check --apply src",
    "format": "biome format --write src",
    "format:check": "biome format --check src",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "opencode",
    "acp",
    "agent",
    "typescript",
    "coding-agent",
    "editor"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/opencode-acp.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/opencode-acp/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/opencode-acp#readme",
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.4.9",
    "@opencode-ai/sdk": "^0.15.13",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "biome": "^0.3.3",
    "typescript": "^5.9.3"
  }
}
